{
    "name": "mezzio/mezzio-helpers",
    "description": "Helper/Utility classes for Mezzio",
    "license": "BSD-3-Clause",
    "keywords": [
        "laminas",
        "mezzio",
        "http",
        "middleware",
        "psr",
        "psr-7"
    ],
    "homepage": "https://mezzio.dev",
    "support": {
        "docs": "https://docs.mezzio.dev/mezzio-helpers/",
        "issues": "https://github.com/mezzio/mezzio-helpers/issues",
        "source": "https://github.com/mezzio/mezzio-helpers",
        "rss": "https://github.com/mezzio/mezzio-helpers/releases.atom",
        "chat": "https://laminas.dev/chat",
        "forum": "https://discourse.laminas.dev"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "5.3.x-dev",
            "dev-develop": "5.4.x-dev"
        },
        "laminas": {
            "config-provider": "Mezzio\\Helper\\ConfigProvider"
        }
    },
    "require": {
        "php": "^7.1",
        "laminas/laminas-zendframework-bridge": "^1.0",
        "mezzio/mezzio-router": "^3.0",
        "psr/container": "^1.0",
        "psr/http-message": "^1.0.1",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "~1.0.0",
        "laminas/laminas-diactoros": "^1.7.1",
        "malukenho/docheader": "^0.1.6",
        "mockery/mockery": "^1.0",
        "phpunit/phpunit": "^7.0.2"
    },
    "autoload": {
        "psr-4": {
            "Mezzio\\Helper\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MezzioTest\\Helper\\": "test/"
        }
    },
    "scripts": {
        "check": [
            "@license-check",
            "@cs-check",
            "@test"
        ],
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml",
        "license-check": "docheader check src/ test/"
    },
    "replace": {
        "zendframework/zend-expressive-helpers": "self.version"
    }
}
